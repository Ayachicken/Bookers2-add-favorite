<div class='col-xs-12'>
		<h2>Follower Users</h2>
		<!--following users一覧 -->
		<table class="table">
			<thead>
				<tr>
					<th>image</th>
					<th>name</th>
					<th></th>
				</tr>
			</thead>

			<tbody>
				<% @user.follower_user.each do |user| %>
				<tr>
					<td><%= attachment_image_tag(user, :profile_image, size:"40x40", fallback: "no-image-mini.jpg") %></td>
					<td><%= user.name%></td>
					<td><%= link_to "Show", user, class: "user_#{user.id} btn btn-default" %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>