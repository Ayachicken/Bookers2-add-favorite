<div class='row'>
    <div class='col-xs-12'>
        <div class='pull-right'>
            <%= form_tag(search_path,:method => 'get') do %>
                <%= text_field_tag :search %>
                <%= select_tag(:option, options_for_select([["user", "1"],["book","2"]])) %>
                <%= select_tag(:choice, options_for_select([["完全一致", "1" ],["部分一致", "2" ],["前方一致", "3" ],["後方一致", "4" ]])) %>
                <%= submit_tag 'Search' %>
            <% end %>
        </div>
    </div>
</div>

